<div class="container">
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <div class="control-group"><%= f.label :first_name %>
      <%= f.text_field :first_name %></div>
    <div class="control-group"><%= f.label :last_name %><br />
      <%= f.text_field :last_name, :autofocus => true %></div>
    <div class="control-group"><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

    <div class="control-group"><%= f.label :password %><br />
  <%= f.password_field :password %></div>

    <div class="control-group"><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

    <div class="control-group"><%= f.submit "Sign up", :class => "btn" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>