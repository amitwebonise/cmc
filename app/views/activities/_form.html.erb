<%= form_for(@activity) do |f| %>
  <% if @activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

      <ul>
      <% @activity.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label>Select Category to which your Activity belongs</label>
    <%= f.select :category_id,  @categories,{:prompt => "Select Category"}   %>
  </div>
  <div class="field">
    <label> Choose Media</label>
    <%= f.select :media,  @medias,{},{ :multiple => true}  %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :contact_person %><br />
    <%= f.text_field :contact_person %>
  </div>
  <div class="field">
    <%= f.label :is_anonymous %>
    <%= f.file_field :image %>
  </div>

    <div class="field">
      <label>Upload image which can support your activity</label>
      <%= f.check_box :is_anonymous %>
    </div>
    <%= fields_for :location do |l|%>
        <div class="field">
          <label>Street Address</label>
          <%= l.text_field :street_address  %>
        </div>
        <div class="field">
          <label>City</label>
          <%= l.text_field :city %>
        </div>
        <div class="field">
          <label>State</label>
          <%= l.text_field :state %>
        </div>
        <div class="field">
       <label>Country</label>
          <%= l.text_field :country %>
        </div>
        <label>Country</label>
        <%= l.text_field :postal_code %>
        </div>

    <% end %>
  <div class="actions">
    <%= f.submit "Create Activity", :class => "btn-primary" %>
    <%= link_to "cancel", :class => "btn-secondary"%>
  </div>
<% end %>
